<div class="card mb-6">
    <header class="card-header card-header-title has-background-grey-lighter">
        <p class="is-block has-text-centered is-full"> {{card.card_name}} </p>
        <div class="column">
            <p class="has-text-primary-light"></p>
            <a href="/comment/{{id}}" class="has-text-black is-capitalized is-pulled-left">{{card_id}} </a>
        </div>
    </header>
    <div class="card-content">
        <img src={{card.card_img}} />
        <div class="content has-text-justified">
            {{comment_text}}
        </div>
        <div class="is-pulled-right">
            <b>{{user.username}}</b>
            | {{format_date createdAt}}
        </div>
    </div>
</div>
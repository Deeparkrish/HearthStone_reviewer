{{!-- New user sign up form --}}

<div class="title has-text-white has-text-centered">Sign Up:</div>
<form class="signup-form has-text-centered">
    <div>
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div>
        <label for="email-signup">Email:</label>
        <input type="text" id="email-signup" />
    </div>
    <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" />
    </div>
    <div>
        <button type="submit" class="button" style="background-color:goldenrod">Sign Up</button>
    </div>
</form>
<script src="/javascript/sign-up.js"></script>